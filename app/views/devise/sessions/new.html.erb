<div class="form_container">
  <div class="form_header"><h2>Sign in</h2></div>

  <div class="form_content round">
    <%= form_for(resource_name, resource, :url => session_path(resource_name)) do |f| %>
      <div class="form_label"><%= f.label :username %></div>
      <div class="form_text"><%= f.text_field :username %></div>

      <div class="form_label"><%= f.label :password %></div>
      <div class="form_text"><%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? -%>
        <div class="form_check"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div class="form_submit"><%= f.submit "Sign in" %></div>
    <% end %>

    <div class="form_links">
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>