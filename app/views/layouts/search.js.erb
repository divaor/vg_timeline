<ul>
  <% for result in @results %>
    <li id="<%= "#{result.class}_#{result.id}" %>"><%= result.result_display %><span class="informal">
        (<%= result.class %>)
        <% if result.respond_to?('result_picture') %>
          <%= image_tag(result.result_picture) %>
        <% end %>
      </span>
    </li>
  <% end %>
</ul>
