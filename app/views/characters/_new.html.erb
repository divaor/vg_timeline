<h2>Character</h2>

<%= form_for(@character, :html => { :multipart => true }) do |f| %>
  <div class="field">
    <%= f.hidden_field :game %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.file_field :picture %>
  </div>
  <%= f.submit "Submit" %>
<% end %>