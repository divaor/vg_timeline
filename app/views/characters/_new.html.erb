<h2>Character</h2>

<%= form_for(@character, :html => { :multipart => true }) do |f| %>
  <div class="field">
    <%= f.hidden_field :game %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= text_field_with_auto_complete :character, :name, {}, { :url => characters_path(), :method => :get, :param_name => 'search' } %>
  </div>
  <div class="field">
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </div>
  <%= f.submit "Submit" %>
<% end %>