<h2>Sequel & Prequel</h2>

<%= form_for @game, :html => { :remote => true } do |f| %>
  <%= hidden_field_tag :element_id, @element_id %>
  <%= hidden_field_tag :helper, @helper %>
  <div class="field">
    <%= f.label :sequel_name %><br />
    <%= text_field_with_auto_complete :game, :sequel_name, { :class => 'fcs' }, { :url => games_path(), :method => :get, :param_name => 'search' } %>
  </div>
  <div class="field">
    <%= f.label :prequel_name %><br />
    <%= text_field_with_auto_complete :game, :prequel_name, {}, { :url => games_path(), :method => :get, :param_name => 'search' } %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>