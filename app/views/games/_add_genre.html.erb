<h2>Genres</h2>

<%= form_for @game do |f| %>
  <% for genre in @genres %>
    <%= check_box_tag "game[genre_ids][]", genre.id, @game.genres.include?(genre) %>
    <%= f.label :genre_ids, genre.name, :class => genre == @genres.first ? 'fcs' : '' %><br />
  <% end %>
  <%= f.submit "Submit" %>
<% end %>
<%= pop_up_controller "Add genre(s)", 'new', 'genres', :game_id => @game.id, :level => 2 %>